# SSH public key for instance access
# Example: ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAAB... user@host
ssh_authorized_keys = "ssh-rsa YOUR_PUBLIC_KEY_HERE"

# OCI Compartment OCID
# Find it: Profile → Tenancy → Tenancy information → OCID
compartment_id = "ocid1.tenancy.oc1..example"

# Ubuntu 24.04 LTS Minimal image OCID for your region
# Find it: https://docs.oracle.com/en-us/iaas/images/
source_image_id = "ocid1.image.oc1.phx.example"

# Availability domain for main instance
# Find it: Compute → Instances → Create Instance → Placement
availability_domain_main = "Ukbr:PHX-AD-1"

# Availability domains for workers (round-robin distribution)
availability_domain_workers = ["Ukbr:PHX-AD-1", "Ukbr:PHX-AD-2", "Ukbr:PHX-AD-3"]

# Number of worker instances
num_worker_instances = 2

# Set to true if using Cloudflare Tunnels (keeps ports 80/443 closed)
use_cloudflare_tunnels = false

# Free tier defaults (adjust if needed)
# instance_shape      = "VM.Standard.A1.Flex"
# ocpus               = 1
# memory_in_gbs       = 6
# boot_volume_size_gb = 50
